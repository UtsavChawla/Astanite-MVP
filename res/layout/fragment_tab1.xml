<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".utab1">

    <!-- TODO: Update blank fragment layout -->

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifHolder"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:src="@drawable/gif1"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type full name!"
        android:textSize="18dp"
        android:textAllCaps="true"
        android:textColor="#FF0000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv2"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_warning_black_24dp"
        app:layout_constraintRight_toLeftOf="@id/tv1"
        app:layout_constraintTop_toTopOf="@id/tv1"
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv2"
        android:text="Find flagged apps ONLY by typing complete name"
        android:textSize="14dp"
        android:textAlignment="center"
        android:textColor="#5B6074"
        android:alpha="0.9"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gifHolder"
        android:layout_marginBottom="70dp"/>

</android.support.constraint.ConstraintLayout>